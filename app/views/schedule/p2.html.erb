<h1>Schedule Table of Courses in Portfolio</h1>
<p> <%= @warning %>  </p>
<table class = 'schedule'>
  <tr class = 'oRow'>
    <th class = 'header'>
      time
    </th>
    <% for i in 0..6 %>
    <th class = 'header'>
      <%= @dWeekdays[i] %>
    </th>
    <% end %>
  </tr>

  <% for i in 0..31 %>
  <tr class = 'oRow'>
    <% if i%2==1 %>
      <td class='row'>
        <%= @timeSlot[i] %>
      </td>
      <td class='row'>
        <%= @mon[i][0] %>
      </td>
      <td class='row'>
        <%= @tue[i][0] %>
      </td>
      <td class='row'>
        <%= @wed[i][0] %>
      </td>
      <td class='row'>
        <%= @thu[i][0] %>
      </td>
      <td class='row'>
        <%= @fri[i][0] %>
      </td>
      <td class='row'>
        <%= @sat[i][0] %>
      </td>
      <td class='row'>
        <%= @sun[i][0] %>
      </td>
    <% else %>
      <td class='odd'>
        <%= @timeSlot[i] %>
      </td>
      <td class='odd'>
        <%= @mon[i][0] %>
      </td>
      <td class='odd'>
        <%= @tue[i][0] %>
      </td>
      <td class='odd'>
        <%= @wed[i][0] %>
      </td>
      <td class='odd'>
        <%= @thu[i][0] %>
      </td>
      <td class='odd'>
        <%= @fri[i][0] %>
      </td>
      <td class='odd'>
        <%= @sat[i][0] %>
      </td>
      <td class='odd'>
        <%= @sun[i][0] %>
      </td>
      <% end %>
    <% end %>
  </tr>


</table>
