		<tr><td>Unit:</td><td><%= text_field_tag :unit, params[:unit] %></td></tr>
		<tr><td>Designation:</td><td><%= text_field_tag :designation, params[:designation] %></td></tr>
	</table>
	<br>
	<%= submit_tag "Search",  class:"button", :name => "commit" %>
	<%= submit_tag "SearchWQB", class:"button", :name => "commit" %>
</body>
<% end %>

