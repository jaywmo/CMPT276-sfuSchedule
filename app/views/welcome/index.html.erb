<body align="center">
	<h1>this is sfu planner!</h1>
	<% if session[:user_name].present? %>
		<div class="logout-button">
			<a class="logout" href= "/sessions/logout"> LOGOUT </a><br>
		</div>
		Hello, <%=session[:user_name]%>!
	<% else %>
		<div class="sign-up-button">
			<a class="sign-up" href= "/users/new"> SIGN UP </a><br>
		</div>
		<div class="login-button">
			<a class="login" href= "/sessions/login"> LOGIN </a><br>
		</div>
	<% end %>
	<table align="center">
		<tr><td>Faculty:</td><td><%= text_field_tag :faculty, params[:faculty] %></td></tr>
		<tr><td>Number:</td><td><%= text_field_tag :number, params[:number] %></td></tr>
		<tr><td>Year:</td><td><%= text_field_tag :year, params[:year] %></td></tr>
		<tr><td>Semester:</td><td><%= text_field_tag :semester, params[:semester] %></td></tr>
	</table>
		<%= submit_tag "Search", :name => nil %>
</body>
