<p id="notice"><%= notice %></p>
<% if session[:user_id].present? %>
  <% if session[:is_admin] %>

    <h1 class= "need-background">LIST OF USERS</h1>

    <table align="center">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email Address</th>
          <th> isAdmin? </th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_admin %>
                YES
              <% else %>
                NO
              <% end %>
            </td>
            <td><%= link_to 'Delete User', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  <% else %>
    <p> You shouldn't be here! </p>
  <% end %>
<% else %>
  <p> You shouldn't be here! </p>
<% end %>
