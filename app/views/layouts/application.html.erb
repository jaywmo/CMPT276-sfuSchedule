      <li style="float:right"><a class = "name-button" ><%=session[:user_name]%></a><li>

      <% if session[:is_admin] %>
        <li style="float:right"><a class = "upper-button" href="/users"> Show User </a></li>
        <li  style="float:right"><a class = "upper-button" href="/urlConstruct"> urlConstruct </a></li>
      <% else %>
        <li style="float:right"><a class = "upper-button" href="/admin/new"> Become Admin</a></li>
      <% end %>
  	<% else %>
  		<li style="float:right"><a class = "upper-button" href= "/users/new">Sign Up</a></li>
  		<li style="float:right"><a class = "upper-button" href= "/sessions/login"> Login </a></li>
  	<% end %>
  </ul>
</head>
